# =============================================================================
# DATACENDIA BACKEND - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed
# These defaults match docker-compose.unified.yml --profile core
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=3001

# PostgreSQL Database (docker-compose.unified.yml)
# Default credentials match unified compose
DATABASE_URL=postgresql://datacendia:datacendia_secure_2024@localhost:5433/datacendia

# Redis - Docker container with password
# Matches docker-compose.unified.yml redis service
REDIS_URL=redis://:datacendia_redis_2024@localhost:6380

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=datacendia_graph_2024

# Ollama LLM — Multi-Model Architecture
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=qwen3:32b
OLLAMA_MODEL_LARGE=llama3.3:70b
OLLAMA_MODEL_REASONING=deepseek-r1:32b
OLLAMA_MODEL_CODER=qwen3-coder:30b
OLLAMA_MODEL_FAST=llama3.2:3b
OLLAMA_MODEL_VISION=qwen3-vl:30b

# JWT Secrets (generate strong random strings in production)
JWT_SECRET=datacendia-jwt-secret-change-in-production-2024
JWT_REFRESH_SECRET=datacendia-refresh-secret-change-in-production-2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info

# =============================================================================
# INFERENCE PROVIDER (choose one — default: ollama)
# =============================================================================
INFERENCE_PROVIDER=ollama
# TRITON_URL=localhost:8001
# TRITON_HTTP_URL=http://localhost:8000
# NIM_URL=http://localhost:8000

# =============================================================================
# OPTIONAL INFRASTRUCTURE — All disabled by default, zero impact when off
# Enable individually as needed. All have embedded/CPU fallbacks.
# =============================================================================

# NeMo Guardrails — LLM-powered input/output rail evaluation
# NEMO_GUARDRAILS_ENABLED=true
# NEMO_GUARDRAILS_MODE=hybrid
# NEMO_GUARDRAILS_URL=http://localhost:8080

# Apache Kafka — Durable event streaming backbone
# KAFKA_ENABLED=true
# KAFKA_BROKERS=localhost:9092
# KAFKA_CLIENT_ID=datacendia-platform

# Temporal.io — Durable workflow orchestration
# TEMPORAL_ENABLED=true
# TEMPORAL_ADDRESS=localhost:7233
# TEMPORAL_NAMESPACE=datacendia
# TEMPORAL_TASK_QUEUE=datacendia-main

# OpenBao/Vault — Secrets management, transit encryption, PKI, dynamic creds
# OPENBAO_ENABLED=true
# OPENBAO_ADDR=http://127.0.0.1:8200
# OPENBAO_TOKEN=
# OPENBAO_ROLE_ID=
# OPENBAO_SECRET_ID=

# Open Policy Agent — Data-driven policy-as-code (complements Casbin RBAC)
# OPA_ENABLED=true
# OPA_MODE=embedded
# OPA_URL=http://localhost:8181

# NVIDIA RAPIDS / cuGraph — GPU-accelerated analytics
# RAPIDS_ENABLED=true
# RAPIDS_URL=http://localhost:8787
# RAPIDS_GPU_DEVICE=0

# NVIDIA Confidential Computing — GPU attestation, data-in-use protection
# CC_ENABLED=true
# CC_ATTESTATION_URL=http://localhost:8443
# CC_REQUIRE_GPU=false

# Apache Flink — Real-time Complex Event Processing
# FLINK_ENABLED=true
# FLINK_MODE=embedded
# FLINK_URL=http://localhost:8081
